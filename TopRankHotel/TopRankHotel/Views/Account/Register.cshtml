@model Core.ViewModels.ApplicationUserViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountDashboardLayout.cshtml";
}

<h1>Register</h1>

<div class="container-fluid mt-5">
    <div class="row">
        <div class="row-col-md-5 col-lg-5 col-sm-12 col-xs-12 col-xl-5 m-auto mb-3">
            @*@if (TempData["Messages"] != null)
        {

            var tempDatamessage = (Core.Models.Messages)TempData["Messages"];
            <partial name="_Messages" model="tempDatamessage" />
        }*@

            @if (Model !=null)
            {
                <div class="m-auto text-success font-weight-bold">
                    <span>@ViewBag.Messages</span>
                </div>
            }
            else
            {
                <div class="m-auto text-danger font-weight-bold">
                    <span>@ViewBag.Messages</span>
                </div>
            }
            <div class="card mt-3 shadow-lg p-4 mb-5 bg-white rounded">

                <center>
                    <img src="~/image/m7.jpg" class="w-25 h-25 rounded-circle ">
                </center>

                @*<span class="text-danger text-center font-weight-bold">@ViewBag.ErrorMessage</span>

            <span class="text-danger text-center font-weight-bold">@ViewBag.Message</span>*@

                <div class="card-body mb-2">
                    <form method="post" asp-controller="Account" asp-action="Register">
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input type="email" asp-for="Email" class="form-control p-3" placeholder="Enter you Email" required style="border-radius:30px;">
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="Password" class="form-control p-3" asp-for="Password" placeholder="Enter you Password" required style="border-radius:30px;">
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input type="Password" asp-for="ConfirmPassword" class="form-control p-3" placeholder="Enter you ConfirmPassword" required style="border-radius:30px;">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>

                <p>Already Registered <a asp-action="Login" asp-controller="Account" class="text-primary font-weight-bold">Login</a></p>
            </div>

        </div>
    </div>
</div>